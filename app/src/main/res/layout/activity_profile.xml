<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_activity"

    tools:context=".ProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/visit_user_profile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:src="@drawable/profile_image"
        />

    <TextView
        android:id="@+id/visit_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/visit_user_profile"
        android:text="User Name"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/visit_user_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/visit_user_name"
        android:text="Status"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:textStyle="bold"
        />

    <Button
    android:id="@+id/send_chat_message"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/visit_user_status"
    android:layout_marginRight="17dp"
    android:layout_marginLeft="17dp"
    android:text="Send Message"
    android:textAllCaps="false"
    android:layout_marginTop="18dp"
    android:textColor="@android:color/background_light"
    android:background="@drawable/buttons"
    android:textSize="20sp"
    android:textStyle="bold"
    />

    <Button
        android:id="@+id/decline_chat_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/send_chat_message"
        android:layout_marginRight="17dp"
        android:layout_marginLeft="17dp"
        android:text="Decline"
        android:textAllCaps="false"
        android:layout_marginTop="6dp"
        android:textColor="@android:color/background_light"
        android:background="@drawable/buttons"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible"
        />


</RelativeLayout>